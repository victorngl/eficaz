// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  name        String?
  phone       String?
  estimates   Estimate[]  
}

model Product {
  id              Int     @id @default(autoincrement())
  name            String  
  unity           String?
  quantity        Int?
  price           Float
  price_amount    Float?
}

model EstimateStatus {
  id        Int     @id @default(autoincrement())
  name      String
  estimates Estimate[]
}

model Estimate {
  id       Int     @id @default(autoincrement())
  name     String?  
  cnpj     String?
  products Json?
  status          EstimateStatus @relation(fields: [statusId], references: [id])
  statusId        Int
  totalprice      Float?
  author          User @relation(fields: [authorId], references: [id])
  authorId        Int
}